<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VendiCore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item> <!-- Deep purple -->
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item> <!-- Dark purple -->
        <item name="colorOnPrimary">@color/white</item> <!-- White for text on primary color -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accentColor</item> <!-- Teal -->
        <item name="colorSecondaryVariant">@color/primaryLightColor</item> <!-- Light purple -->
        <item name="colorOnSecondary">@color/black</item> <!-- Black for text on secondary color -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
